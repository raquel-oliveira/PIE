program factorial;

# Variable declaration
var 
    int num, sum, i; # Received integer, adder, index

begin # main
    # Print message
    writeln('Please Input an Integer');
    # Read integer
    readln(num);
    # Initialize adder
    sum := 1;
    # Adder loop
    for i := 1 to sum do
        sum := sum * i;
    # Print result
    write('Result: ');
    write(sum)
end.